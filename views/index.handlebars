<!DOCTYPE html>
<html lang="en">
</head>
						
  <div class="row">
    <div class="col-md-12">    
      <div class="panel panel-success">
        <div class="panel-heading">
          <h3 class="panel-title panel-title-style"><center>Index</center></h3>
        </div>
        <div class="panel-body panel-style">
          <table class="table article -table">
            <tbody>
              {{#each articles}}
          
                  <tr>   
                    <td>{{this.title}} <br> {{this.link}}</td> 
                    <td>
                      <form action="/article/{{this.id}}" method="DELETE">
                          <button type="submit" class="btn btn-primary btn-xs btn-del" data-id="{{this.id}}">Delete</button>
                      </form> 
               <!--        <form action="/article/{{this.id}}" method="GET">
                        <button type="submit" class="btn btn-primary btn-xs" id="btn-note">Comment</button> -->
                      </form>
                    </td>
                  </tr>
              
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>